    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="242dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
