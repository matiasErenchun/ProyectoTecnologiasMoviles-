<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BienvenidaCliente"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="?actionBarSize"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/azul_500">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="@string/vbc_bienvenido"
            android:textSize="26dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white">

        </androidx.appcompat.widget.AppCompatTextView>
        <TextView
            android:id="@+id/nombre_perfil_cliente"
            android:layout_marginHorizontal="52dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="Nombre"
            android:textSize="26dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white">

        </TextView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_account_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ahcliente"
            app:civ_border_color="@color/azul_500"
            app:civ_border_width="2dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="52dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:text="@string/vbc_intro"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:textAlignment="gravity">

        </androidx.appcompat.widget.AppCompatTextView>
    </RelativeLayout>

</FrameLayout>